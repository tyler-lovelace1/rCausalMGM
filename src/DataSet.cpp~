#include "DataSet.hpp"

std::set<std::string> DataSet::getUnique(const Rcpp::CharacterVector& col) {
  std::set<std::string> unique;
  std::string val;
  for (int i = 0; i < n; i++) {
    val = (std::string) col[i];
    if (val == "*" || val == "NaN")
      continue
    unique.insert((std::string) col[i]);
  }
  return unique;
}

DataSet::DataSet(const Rcpp::DataFrame& df, const int& maxDiscrete) {
  this->maxDiscrete=maxDiscrete;
  const Rcpp::CharacterVector names = df.names();
  this->m = names.length();
  this->n = df.nrows();
  this->data.set_size(this->n,this->m);
  int numUnique;
  std::string val;
  
  for (int i = 0; i < m; i++) {

    Rcpp::CharacterVector col = df[i];

    std::set<std::string> unique = getUnique(col);
    
    numUnique = unique.size();
      
    if (numUnique > maxDiscrete) {
      
      variables.push_back(new ContinuousVariable((std::string) names[i]));

    } else {
      
      std::vector<std::string> categories;
      
      for (std::set<std::string>::iterator it=unique.begin(); it!=unique.end(); it++)
	categories.push_back(*it);

      std::sort(categories.begin(), categories.end());
      
      variables.push_back(new DiscreteVariable((std::string) names[i], categories));
    }

    variableNames.push_back((std::string) names[i]);
    name2idx.insert(std::pair<std::string, int>((std::string) names[i], i));


    for (int j = 0; j < n; j++) {

      val = (std::string) col[j]

      if (variables.at(i)->isMissingValue()) {

	throw std::runtime_error("Missing values not yet implemented");
      
      } else if (variables.at(i)->isContinuous()) {
	
	if (((ContinuousVariable*) variables.at(i))->checkValue(val)) {
	  this->data(j,i) = std::stod((std::string) col[j]);
	  
	} else {
	  
	  throw std::runtime_error("invalid value encountered in row " + std::to_string(j) + " of variable " + ((std::string) names[i]));
	  
	}
      } else if (variables.at(i)->isDiscrete()) {
	
	if (((DiscreteVariable*) variables.at(i))->checkValue((std::string) col[j])) {
	  this->data(j,i) = (double) ((DiscreteVariable*) variables.at(i))->getIndex((std::string) col[j]);

	} else {
	  
	  throw std::runtime_error("invalid value encountered in row " + std::to_string(j) + " of variable " + ((std::string) names[i]));
	}
      } else {
	
	throw std::runtime_error("invalid variable type");
      }
    }
  }
}

DataSet::~DataSet() {
  for (int i = 0; i < variables.size(); i++)
    delete variables.at(i);
}

// [[Rcpp::export]]
Rcpp::XPtr<DataSet> rCausalMGMData(const Rcpp::DataFrame& df, const int& maxDiscrete=5) {
  DataSet ds = DataSet(df, maxDiscrete);

  Rcpp::XPtr<DataSet> data = Rcpp::XPtr<DataSet>(&ds);

  // Rcpp::DataFrame df = Rcpp::DataFrame::create(Rcpp::Named(ds.variableNames.at(0)) = ds.data.col(0));

  // for (int i = 1; i < ds.m; i++) {
  //   df.push_back(ds.data.col(i), ds.variableNames.at(i));
  // }
  
  data.attr("data") = df;
  
  // Rcpp::List data = Rcpp::List::create(Rcpp::Named("rows") = ds.n,
  // 				       Rcpp::Named("columns") = ds.m,
  // 				       Rcpp::Named("maxDiscrete") = ds.maxDiscrete,
  // 				       Rcpp::Named("variableNames") = ds.variableNames,
  // 				       Rcpp::Named("data") = ds.data,
  // 				       Rcpp::Named("dataset") = Rcpp::XPtr<DataSet>(&ds));
  return data;
}
